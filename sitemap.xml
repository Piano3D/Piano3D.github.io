---
layout:
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% for post in site.posts %}
    {% if post.id contains "404" %}{% else %}
      <url>
        <loc>https://piano3d.com{{ post.url }}</loc>
        {% assign versions=site.posts | where:"handle", post.handle %}
        {% for version in versions %}
          <xhtml:link rel="alternate" hreflang="{{ version.locale }}" href="https://piano3d.com{{ version.url }}" />
        {% endfor %}
        <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      </url>
    {% endif %}
  {% endfor %}
  {% for page in site.pages %}
    {% if page.url contains "404" or page.url contains "sitemap.xml" or page.url contains "redirects.json" or page.url contains "robots.txt" or page.url contains "atom.xml" or page.url contains "/blog/"  %}{% else %}
      <url>
        <loc>https://piano3d.com{{ page.url }}</loc>
        {% assign versions=site.pages | where:"handle", page.handle %}
        {% for version in versions %}
          <xhtml:link rel="alternate" hreflang="{{ version.locale }}" href="https://piano3d.com{{ version.url }}" />
        {% endfor %}
      </url>
    {% endif %}
  {% endfor %}
  <url>
    <loc>https://piano3d.com/blog</loc>
    <xhtml:link rel="alternate" hreflang="en" href="https://piano3d.com/blog" />
    <xhtml:link rel="alternate" hreflang="ru" href="https://piano3d.com/ru/blog" />
  </url>
  <url>
    <loc>https://piano3d.com/ru/blog</loc>
    <xhtml:link rel="alternate" hreflang="en" href="https://piano3d.com/blog" />
    <xhtml:link rel="alternate" hreflang="ru" href="https://piano3d.com/ru/blog" />
  </url>
</urlset>